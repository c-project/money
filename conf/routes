# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /expense/list				controllers.ExpenseController.list
GET     /expense/:id/show			controllers.ExpenseController.show(id: Int)
GET     /expense/:id/delete			controllers.ExpenseController.delete(id: Int)
GET     /expense/:id/edit			controllers.ExpenseController.edit(id: Int)
GET     /expense/add				controllers.ExpenseController.add
GET     /expense/create				controllers.ExpenseController.create

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
